        rem /**
        rem  * Get grid column number.
        rem  *
        rem  * Returns the grid column number (zero based) for the give grid and column heading.
        rem  *
        rem  * @param BBjStandardGrid grid! 
        rem  * @param BBjString colHdr$ column heading
        rem  * @return BBjNumber ListColumn grid column number (zero based), or -1 if not found
        rem  */
    
        method public static BBjNumber getGridColumnNumber(BBjStandardGrid grid!,  BBjString colHdr$)
            seterr method_error

            colHdr$=cvs(colHdr$,3)
            numGridCols=grid!.getNumColumns()
            ListColumn=-1
            for xwk=0 to numGridCols-1
                if cvs(grid!.getColumnHeaderCellText(xwk),3)=colHdr$ then
                    ListColumn=xwk
                    break
                endif
            next xwk

            methodret ListColumn
           
