rem --- CHAN     : Channel number (input)
rem --- FILENAME$: File name (returned)
rem --- PATHNAME$: Directory path (returned)
rem --- FILETYPE$: File Type (returned)
rem --- C=CISAM and compatible
rem --- K=Keyed (Direct or Sort)
rem --- I=Indexed
rem --- M=Multi-Keyed
rem --- P=Program
rem --- T=Text/String or System File
rem --- S=Serial
rem --- KEYLEN   : Key size (returned)
rem --- RECORDS  : Number of records (returned)
rem --- RECLEN   : Bytes per record (returned)
rem --- NUMREC   : Number of records used (returned)
rem --- STATUS   : 0=No Error (returned)

    seterr std_error
    setesc std_error
    enter chan,filename$,pathname$,filetype$,keylen,records,reclen,numrec,status

rem --- Retrieve the program path

    pgmdir$=stbl("+DIR_PGM",err=*next)

rem --- Retrieve sysinfo data

    sysinfo_template$=stbl("+SYSINFO_TPL",err=*next)
    dim sysinfo$:sysinfo_template$
    sysinfo$=stbl("+SYSINFO",err=*next)
    milestone=num(stbl("+MILESTONE",err=*next),err=*next)
    firm_id$=sysinfo.firm_id$

rem --- Initializations

    filename$=""
    pathname$="",filetype$="",types$="ISKTPLM"
    keylen=0
    records=0,reclen=0,numrec=0,status=0

rem --- Retrieve file information

    f$=fid(chan,err=channel_err)
    fin$=fin(chan,err=channel_err)
    
rem --- Device

    if len(f$)<6 then
        filename$=f$
        goto std_exit
    endif

rem --- Path and file name

    pp=max(pos("/"=f$(9),-1),pos(":"=f$(9),1),pos(">"=f$(9),-1))
    if pp=0 
        pathname$=""
        filename$=f$(9)
    else 
        pathname$=f$(9,pp)
        filename$=f$(9+pp)
    endif

rem --- File type

    x=pos(and($0f$,f$(1,1))=$00010203040506$)
    if x filetype$=types$(x,1)

rem --- Number of records, key size and record length

    records=dec(f$(3,4))
    keylen=asc(f$(2)),reclen=dec(f$(7,2))
    if pos(filetype$="STP") reclen=dec(fin$(1,4))

rem --- Number of records in use

    if pos(filetype$="KM") numrec=dec(fin$(77,4))
    if filetype$="I" numrec=records

rem --- All done

    goto std_exit

channel_err: rem --- Channel not open

    if err<>14 goto std_error
    status=err
    goto std_exit


