            endif

            pdf!.setText(135+2, fnline2y%(line), "Lot: "+ope21a.lotser_no$+"   Shipped: "+amount$)
        endif
        
        if pdf!.getPage() = pagePDF! then break
        pdf!.setPage(pagePDF!)
        
    wend

    line = line + 1

    return

