    open_tables$[20]="ARS_PARAMS",   open_opts$[20] = "OTA"
    
    gosub open_tables
    
    arm01_dev      = num(open_chans$[1])
    arm02_dev      = num(open_chans$[2])
    arm03_dev      = num(open_chans$[3])
    arm10_dev      = num(open_chans$[4])
    arm10c_dev     = num(open_chans$[5])
