        OutVect!.addItem(" "); 	rem Space so underline prints
		OutVect!.addItem(str(grand_dir_Var));	rem grand_dir_Var_u[4]
        OutVect!.addItem(" "); 	rem Space so underline prints
		OutVect!.addItem(str(grand_Mats_Var));	rem grand_Mats_Var_u[5]
		OutVect!.addItem(" "); 	rem Space so underline prints
	
	rem --- Second line of Grand 
