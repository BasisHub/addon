            xwk = fnblank(1)
            OutVect!.addItem(str((totalab+totamat)/cqty:m9$))
            OutVect!.addItem(str(((totslab+totsmat)-(totalab+totamat))/cqty:m6$))
            OutVect!.addItem(str((((totslab+totsmat)/cqty)-((totalab+totamat)/cqty))*100/((totslab+totsmat)/cqty):m6$))
