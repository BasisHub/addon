    if level>1 and literals$[2]<>"" nmbr_tot2[all]=nmbr_tot2[all]+nmbr[all],total_tot2=total_tot2+total
    if level>2 and literals$[3]<>"" nmbr_tot3[all]=nmbr_tot3[all]+nmbr[all],total_tot3=total_tot3+total

