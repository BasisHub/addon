rem --- Read next detail record
escape
        while more

            dim line[4]
            poe13a_key$=key(poe13_dev,end=*break)
            if pos(p03_key$=poe13a_key$)<>1 then break
            read record (poe13_dev) poe13a$

rem --- Read line code

