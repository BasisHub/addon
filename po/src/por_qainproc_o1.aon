                wend

            endif

rem --- Position rejection detail file

            if poe13a.qa_wip_qty<>0
                read (poe63_dev,key=p13_key$,dom=*next)

rem --- Read next rejection detail

                while more

                    p63_key$=key(poe63_dev,end=*break)
