                    break

        swend

               while more; rem MainHdr Loop

            if printseq$="A" if poe02a_key.firm_id$<>firm_id$ continue
            if printseq$<>"A" if poe02a_key.firm_id$<>firm_id$ goto done
            read record (poe02_dev,key=poe02a_key$) poe02a$

rem --- Test Ranges

            headrecprinted$="N"
